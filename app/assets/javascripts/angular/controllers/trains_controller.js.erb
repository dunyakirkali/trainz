  $scope.displayCountry = function(country) {
    var geocoder = new google.maps.Geocoder();
    geocoder.geocode({ 'address': country }, function(results, status) {
      if (status == google.maps.GeocoderStatus.OK) {
        $scope.draw_map.fitBounds(results[0].geometry.bounds);
        $scope.trains = []
        $scope.companies = []
        $('.messages').html('loading ...');
        url = "/trains?s=" + results[0].geometry.bounds.getSouthWest().lat() + "&n=" + results[0].geometry.bounds.getNorthEast().lat() + "&w=" + results[0].geometry.bounds.getSouthWest().lng() + "&e=" + results[0].geometry.bounds.getNorthEast().lng()
